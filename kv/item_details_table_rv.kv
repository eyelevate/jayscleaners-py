<ItemsDetailTableButton>:
    id: items_detail_table_button
    markup: True
    font_size:sp(13)
    markup: True
    disabled: False
    text_size: self.size
    valign: 'middle'
    halign: 'center'

<ItemsDetailTableRV@RecycleView>:
    viewclass: 'ItemsDetailTableButton'
    SelectableRecycleGridLayout:
        bar_width: dp(5)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'horizontal'
        row_force_default: True,
        row_default_height: '50dp'
        cols:4