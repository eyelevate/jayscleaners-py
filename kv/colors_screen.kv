<ColorsScreen>:
    id: screen_colors
    name: "colors"
    colors_table: colors_table
    on_pre_enter: root.reset()

    BoxLayout:
        orientation: 'vertical'
        size_hint:1,1
        ActionBar:
            id: _action_settings
            size_hint: 1,0.1
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'Colors Update'
                    with_previous: False
                    previous_image: ''
                    on_release: root.manager.current = "settings"
                    pos_hint: {'left':0}
                ActionGroup:
                    text: '          File          '
                    mode: 'spinner'
                    width: 500
                    ActionButton:
                        text: 'Quit'
                        on_release: app.get_running_app().stop()
        BoxLayout:
            size_hint: 1,0.8
            pos_hint: {'top':1}
            orientation: 'horizontal'
            ScrollView:
                pos_hint:{'top':1}
                GridLayout:
                    pos_hint:{'top':1}
                    id: colors_table
                    cols: 5
                    size_hint_y:None
                    height: self.minimum_height
                    row_force_default: True
                    row_default_height: '125sp'


        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,0.1
            Button:
                markup: True
                text: 'Cancel'
                on_press: root.reset()
                on_release: app.root.current = "settings"
            Button:
                markup: True
                text: '[color=0AAC00][b]New Color[/b][/color]'
                on_release: root.popup_add()