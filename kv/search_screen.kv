<SearchScreen>:
    id: screen_search
    search: search
    customer_mark_l: customer_mark_l
    customer_id_ti: customer_id_ti
    cust_last_name: customer_last_name_ti
    cust_first_name: customer_first_name_ti
    cust_phone: customer_phone_ti
    cust_last_drop: customer_last_drop_ti
    cust_starch: customer_starch_ti
    cust_credit: customer_credit_ti
    cust_invoice_memo: customer_invoice_memo_ti
    cust_important_memo: customer_important_memo_ti
    invoice_table: invoice_table
    cust_mark_label: customer_mark_l
    history_btn: history_btn
    edit_invoice_btn: edit_invoice_btn
    edit_customer_btn: edit_customer_btn

    delivery_btn: delivery_btn
    reprint_btn: reprint_btn
    quick_btn: quick_btn
    pickup_btn: pickup_btn
    dropoff_btn: dropoff_btn
    search_popup: search_popup
    search_results_table: search_results_table
    search_results_footer: search_results_footer
    view_deliveries_btn: view_deliveries_btn
    name:"search"
    on_enter: root.reset()
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1,0.1
        pos_hint: {'top':1}
        TextInput:
            id: search
            font_size:'20sp'
            hint_text: "Search"
            multiline: False
            on_text_validate: root.search_customer()
            text: ''
        Button:
            on_release: root.search_customer()
            font_size:'20sp'
            text: "Search"
        Button:
            on_release: root.calculator_popup()
            font_size:'20sp'
            text: "Calculator"
        Button:
            on_release: app.root.current = "rack"
            font_size:'20sp'
            text: "Rack"
        Button:
            on_release: app.root.current = "main"
            font_size:'20sp'
            text: "Main"
    Popup:
        id: search_popup
        on_parent: if self.parent == screen_search: screen_search.remove_widget(self)
        BoxLayout:
            orientation: 'vertical'
            GridLayout:
                id:search_results_table
                size_hint: 1,0.9
                cols:5
                rows:10
                row_force_default: True
                row_default_height:50
            BoxLayout:
                id:search_results_footer
                size_hint: 1,0.1
                Button:
                    size_hint_y:None
                    markup: True
                    text: 'Cancel'
                    on_press: search_popup.dismiss()

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1,0.80
        pos_hint: {'top':0.90}
        RelativeLayout:
            size_hint: 0.6,1
            ScrollView:
                size_hint:(1,1)
                GridLayout:
                    size_hint_y:None
                    height: self.minimum_height
                    row_force_default: True
                    row_default_height:sp(32)
                    cols: 1
                    BottomLeftFormLabel:
                        text: "Customer Info"
                        font_size: '20sp'

                    Label:
                        id: customer_mark_l
                        text: ""
                        font_size: '20sp'
                    BottomLeftFormLabel:
                        text: "ID"

                    CenterVerticalTextInput:
                        id: customer_id_ti
                        hint_text: "Customer ID #"
                        font_size:'20sp'
                        multiline: False
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''
                    BottomLeftFormLabel:
                        text: "Last Name"

                    CenterVerticalTextInput:
                        id: customer_last_name_ti
                        hint_text: "Last Name"
                        font_size:'20sp'
                        multiline: False
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''
                    BottomLeftFormLabel:
                        text: "First Name"

                    CenterVerticalTextInput:
                        id: customer_first_name_ti
                        font_size:'20sp'
                        hint_text: "First Name"
                        multiline: False
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''
                    BottomLeftFormLabel:
                        text: "Phone"

                    CenterVerticalTextInput:
                        id: customer_phone_ti
                        font_size:'20sp'
                        hint_text: "(xxx) xxx-xxxx"
                        multiline: False
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''
                    BottomLeftFormLabel:
                        text: "Last Drop"

                    CenterVerticalTextInput:
                        id: customer_last_drop_ti
                        font_size:'20sp'
                        hint_text: "Last Drop"
                        multiline: False
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''
                    BottomLeftFormLabel:
                        text: "Starch"

                    CenterVerticalTextInput:
                        id: customer_starch_ti
                        font_size:'20sp'
                        hint_text: "Starch"
                        multiline: False
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''
                    BottomLeftFormLabel:
                        text: "Credit"

                    CenterVerticalTextInput:
                        id: customer_credit_ti
                        font_size:'20sp'
                        hint_text: "Credit"
                        multiline: False
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''
                    BottomLeftFormLabel:
                        text: "Invoice Memo"

                    CenterVerticalTextInput:
                        id: customer_invoice_memo_ti
                        hint_text: "Invoice Memo"
                        font_size:'17sp'
                        size_hint_y: None
                        height: '72sp'
                        multiline: True
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''
                    BottomLeftFormLabel:
                        text: "Important Memo"

                    CenterVerticalTextInput:
                        id: customer_important_memo_ti
                        hint_text: "Important Memo"
                        font_size:'17sp'
                        size_hint_y: None
                        height: '72sp'
                        multiline: True
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''
                    BottomLeftFormLabel:
                        text: "Delivery Scheduled"

                    Button:
                        id: view_deliveries_btn
                        text:'View Delivery Schedule'
                        on_release: root.view_deliveries()
                    Label:
                        text: ""
                        font_size: '20sp'
        GridLayout:
            cols: 2
            ScrollView:
                GridLayout:
                    id:invoice_table
                    cols: 6
                    size_hint_y:None
                    size_hint_x:1
                    height: self.minimum_height
                    spacing: 2
                    row_force_default: True
                    row_default_height:'32sp'
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        size_hint_y: None
                        markup: True
                        text: "[color=000000][b]Inv[/b][/color]"
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        size_hint_y: None
                        markup: True
                        text: "[color=000000][b]Loc[/b][/color]"
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        size_hint_y: None
                        markup: True
                        text: "[color=000000][b]Due[/b][/color]"
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        size_hint_y: None
                        markup: True
                        text: "[color=000000][b]Rack[/b][/color]"
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        size_hint_y: None
                        markup: True
                        text: "[color=000000][b]Qty[/b][/color]"
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        size_hint_y: None
                        markup: True
                        text: "[color=000000][b]Total[/b][/color]"
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size

            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.20,1
                Button:
                    id: reprint_btn
                    on_release: root.reprint_popup()
                    font_size:'20sp'
                    text: "Reprint"
                    disabled: True
                Button:
                    id: delivery_btn
                    on_release: root.delivery_setup()
                    font_size: sp(15)
                    text: "Delivery"
                    disabled: True

                Button:
                    id: edit_invoice_btn
                    font_size:'20sp'
                    on_release: app.root.current = "edit_invoice"
                    text: "Edit"
                    disabled: True
                Button:
                    id: history_btn
                    font_size:'20sp'
                    on_release: app.root.current = "history"
                    text: "History"
                    disabled: True
    GridLayout:
        cols: 9
        size_hint: 1,0.1
        pos_hint: {'bottom':1}

        Button:
            on_release: app.root.current = "new_customer"
            font_size:'20sp'
            text: "New"
        Button:
            id: edit_customer_btn
            on_release: app.root.current = "edit_customer"
            font_size:'15sp'
            text: "Edit Customer"
            disabled: True
        Button:
            on_release: app.root.current = 'last10'
            font_size:'20sp'
            text: "Last 10"

        Button:
            id: quick_btn
            font_size:'20sp'
            text: "Quick"
            disabled: True
            on_release: root.quick_popup()
        Button:
            id: pickup_btn
            on_release: app.root.current = "pickup"
            font_size:'20sp'
            text: "Pickup"
            disabled: True
        Button:
            id: dropoff_btn
            on_release: app.root.current = "dropoff"
            font_size:'20sp'
            text: "Dropoff"
            disabled: True