<SearchScreen>:
    id: screen_search
    search: search
    customer_mark_l: customer_mark_l
    customer_id_ti: customer_id_ti
    cust_info_label: cust_info_label
    cust_last_name: customer_last_name_ti
    cust_first_name: customer_first_name_ti
    cust_phone: customer_phone_ti
    cust_last_drop: customer_last_drop_ti
    cust_starch: customer_starch_ti
    cust_credit_label: cust_credit_label
    cust_credit: customer_credit_ti
    cust_account_label: cust_account_label
    cust_account: customer_account_ti
    cust_invoice_memo: customer_invoice_memo_ti
    cust_important_memo: customer_important_memo_ti
    cust_mark_label: customer_mark_l
    history_btn: history_btn
    edit_invoice_btn: edit_invoice_btn
    edit_customer_btn: edit_customer_btn
    reprint_btn: reprint_btn
    quick_btn: quick_btn
    pickup_btn: pickup_btn
    dropoff_btn: dropoff_btn
    search_popup: search_popup
    search_results_table: search_results_table
    search_results_footer: search_results_footer
    search_table_rv: search_table_rv
    name:"search"
    on_enter: root.reset()
    on_pre_enter: root.attach()
    on_leave: root.detach()

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1,0.1
        pos_hint: {'top':1}
        TextInput:
            id: search
            font_size:'20sp'
            hint_text: "Search"
            multiline: False
            focus: True
            on_text_validate: root.search_customer()
            text: ''
        Button:
            on_release: root.search_customer()
            font_size:'20sp'
            text: "[color=ffffff]Search[/color]"
            markup: True
            background_color: (0.369, 0.369, 0.369, 1)
        Button:
            on_release: root.barcode_popup()
            font_size:'20sp'
            disabled: False
            text: "[color=ffffff]Barcode[/color]"
            markup: True
            background_color: (0.369, 0.369, 0.369, 1)
        Button:
            on_release: app.root.current = "rack"
            font_size:'20sp'
            text: "[color=ffffff]Rack[/color]"
            markup: True
            background_color: (0.369, 0.369, 0.369, 1)
        Button:
            on_release: app.root.current = "main"
            font_size:'20sp'
            text: "[color=ffffff]Main[/color]"
            markup: True
            background_color: (0.369, 0.369, 0.369, 1)
    Popup:
        id: search_popup
        on_parent: if self.parent == screen_search: screen_search.remove_widget(self)
        BoxLayout:
            orientation: 'vertical'
            GridLayout:
                id:search_results_table
                size_hint: 1,0.9
                cols:5
                rows:10
                row_force_default: True
                row_default_height:50
            BoxLayout:
                id:search_results_footer
                size_hint: 1,0.1
                Button:
                    size_hint_y:None
                    markup: True
                    text: '[color=ffffff]Cancel[/color]'
                    on_press: search_popup.dismiss()

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1,0.80
        pos_hint: {'top':0.90}
        RelativeLayout:
            size_hint: 0.6,1
            ScrollView:
                size_hint:(1,1)
                GridLayout:
                    size_hint_y:None
                    height: self.minimum_height
                    row_force_default: True
                    row_default_height:sp(32)
                    cols: 1

                    BottomLeftFormLabel:
                        id: cust_info_label
                        text: "Customer Info"
                        markup:True
                        font_size: '20sp'

                    Label:
                        id: customer_mark_l
                        text: ""
                        font_size: '20sp'

                    Button:
                        text:'Invite to Nuclei'
                        font_size:sp(20)
                        on_press: root.invite_popup_setup()

                    BottomLeftFormLabel:
                        text: "ID"

                    CenterVerticalTextInput:
                        id: customer_id_ti
                        hint_text: "Customer ID #"
                        font_size:'20sp'
                        multiline: False
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''
                    BottomLeftFormLabel:
                        text: "Last Name"

                    CenterVerticalTextInput:
                        id: customer_last_name_ti
                        hint_text: "Last Name"
                        font_size:'20sp'
                        multiline: False
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''
                    BottomLeftFormLabel:
                        text: "First Name"

                    CenterVerticalTextInput:
                        id: customer_first_name_ti
                        font_size:'20sp'
                        hint_text: "First Name"
                        multiline: False
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''
                    BottomLeftFormLabel:
                        text: "Phone"

                    CenterVerticalTextInput:
                        id: customer_phone_ti
                        font_size:'20sp'
                        hint_text: "(xxx) xxx-xxxx"
                        multiline: False
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''

                    BottomLeftFormLabel:
                        text: "Important Memo"

                    CenterVerticalTextInput:
                        id: customer_important_memo_ti
                        hint_text: "Important Memo"
                        font_size: sp(17)
                        size_hint_y: None
                        height: dp(30)
                        multiline: True
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''
                    BottomLeftFormLabel:
                        text: "Invoice Memo"

                    CenterVerticalTextInput:
                        id: customer_invoice_memo_ti
                        hint_text: "Invoice Memo"
                        font_size: sp(17)
                        size_hint_y: None
                        height: dp(30)
                        multiline: True
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''

                    BottomLeftFormLabel:
                        text: "Last Drop"

                    CenterVerticalTextInput:
                        id: customer_last_drop_ti
                        font_size:'20sp'
                        hint_text: "Last Drop"
                        multiline: False
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''
                    BottomLeftFormLabel:
                        text: "Starch"

                    CenterVerticalTextInput:
                        id: customer_starch_ti
                        font_size:'20sp'
                        hint_text: "Starch"
                        multiline: False
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''
                    BottomLeftFormLabel:
                        id: cust_account_label
                        text: "[ref=account_history][color=00ffff]Account[/color][/ref]"
                        markup:True
                    CenterVerticalTextInput:
                        id: customer_account_ti
                        font_size:sp(20)
                        hint_text: "$0.00"
                        multiline: False
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''
                    Button:
                        text:'Pay Account Balance'
                        font_size:sp(20)
                        on_release: root.pay_account_popup()
                    BottomLeftFormLabel:
                        id: cust_credit_label
                        text: "[ref=credit_history][color=00ffff]Credit[/color][/ref]"
                        markup:True
                    CenterVerticalTextInput:
                        id: customer_credit_ti
                        font_size:sp(20)
                        hint_text: "Credit"
                        multiline: False
                        readonly: True
                        padding: [5,5,5,5]
                        text: ''
                    Button:
                        text:'Add Store Credit'
                        font_size:sp(20)
                        on_release: root.add_store_credit_popup()


                    Label:
                        text: ""
                        font_size: '20sp'
        GridLayout:
            cols: 2
            BoxLayout:
                orientation: 'vertical'

                GridLayout:
                    rows: 1
                    cols: 6
                    size_hint_y: None
                    size_hint_x: 1
                    spacing: 2
                    height: self.minimum_height
                    row_force_default: True
                    row_default_height: sp(25)
                    Label:
                        markup: True
                        text: "[color=000000][b]Inv[/b][/color]"
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        markup: True
                        text: "[color=000000][b]Loc[/b][/color]"
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        markup: True
                        text: "[color=000000][b]Due[/b][/color]"
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        markup: True
                        text: "[color=000000][b]Rack[/b][/color]"
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        markup: True
                        text: "[color=000000][b]Qty[/b][/color]"
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        markup: True
                        text: "[color=000000][b]Total[/b][/color]"
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                SearchTableRV:
                    id: search_table_rv


            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.20,1
                Button:
                    id: reprint_btn
                    on_release: root.reprint_popup()
                    font_size:'20sp'
                    text: "[color=ffffff]Reprint[/color]"
                    background_color: (0.369, 0.369, 0.369, 1)
                    markup: True
                    disabled: True


                Button:
                    id: edit_invoice_btn
                    font_size:'20sp'
                    on_release: root.open_popup()
                    on_release: app.root.current = "edit_invoice"
                    text: "[color=ffffff]Edit[/color]"
                    background_color: (0.369, 0.369, 0.369, 1)
                    markup: True
                    disabled: True
                Button:
                    id: history_btn
                    font_size:'20sp'
                    on_release: root.open_popup()
                    on_release: app.root.current = "history"
                    text: "[color=ffffff]History[/color]"
                    background_color: (0.369, 0.369, 0.369, 1)
                    markup: True
                    disabled: True


    GridLayout:
        cols: 9
        size_hint: 1,0.1
        pos_hint: {'bottom':1}

        Button:
            on_release: app.root.current = "new_customer"
            font_size:'20sp'
            text: "[color=ffffff]New[/color]"
            background_color: (0.369, 0.369, 0.369, 1)
            color: (1, 1, 1, 1)
            markup: True
        Button:
            id: edit_customer_btn
            on_release: app.root.current = "edit_customer"
            font_size:'15sp'
            text: "[color=ffffff]Edit Customer[/color]"
            background_color: (0.369, 0.369, 0.369, 1)
            color: (1, 1, 1, 1)
            markup: True
            disabled: True
        Button:
            on_release: app.root.current = 'last10'
            font_size:'20sp'
            text: "[color=ffffff]Last 10[/color]"
            color: (1, 1, 1, 1)
            background_color: (0.369, 0.369, 0.369, 1)
            markup: True

        Button:
            id: quick_btn
            font_size:'20sp'
            text: "[color=ffffff]Quick[/color]"
            color: (1, 1, 1, 1)
            background_color: (0.369, 0.369, 0.369, 1)
            markup: True
            disabled: True
            on_release: root.quick_popup()
        Button:
            id: pickup_btn
            on_release: root.open_popup()
            on_release: app.root.current = "pickup"
            font_size:'20sp'
            text: "[color=ffffff]Pickup[/color]"
            color: (1, 1, 1, 1)
            background_color: (0.369, 0.369, 0.369, 1)
            markup: True
            disabled: True
        Button:
            id: dropoff_btn
            on_release: root.open_popup()
            on_release: app.root.current = "dropoff"
            font_size:'20sp'
            text: "[color=ffffff]Dropoff[/color]"
            color: (1, 1, 1, 1)
            background_color: (0.369, 0.369, 0.369, 1)
            markup: True
            disabled: True