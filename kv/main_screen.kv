<MainScreen>:
    id:screen_main
    name:"main"
    update_label:update_data_label
    settings_button: settings_button
    reports_button: reports_button
    delivery_button: delivery_button
    dropoff_button: dropoff_button
    update_button: update_button
    login_button: login_button

    ActionBar:
        id: _action_main
        size_hint: 1,0.1
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Jays Cleaners POS'
                with_previous: False
                on_release: root.manager.current = "main"
            ActionGroup:
                text: 'File'
                mode: 'spinner'
                size_hint_x: None
                width: 250
                ActionButton:
                    text: 'New'
                ActionButton:
                    text: 'Open'
                ActionButton:
                    text: 'Save'
                ActionButton:
                    text: 'Save As'
                ActionButton:
                    text: 'Quit'

    GridLayout:
        cols: 2
        size_hint: 1,0.8
        pos_hint: {'top':0.9}
        GridLayout:
            cols: 2
            size_hint_y: 3
            Button:
                id: settings_button
                on_release: app.root.current = "settings"
                text: "Settings"
                disabled: True
                font_size:'20sp'

            Button:
                id: reports_button
                on_release: app.root.current = "reports"
                text: "Reports"
                disabled: True
                font_size:'20sp'

            Button:
                id: delivery_button
                on_release: app.root.current = "delivery"
                text: "Delivery"
                disabled: True
                font_size:'20sp'

            Button:
                id: login_button
                text: "Login"
                font_size:'20sp'
                on_release: root.login_show()

        Button:
            id: dropoff_button
            disabled: True
            font_size:'20sp'
            on_press: app.root.current = "search"
            on_release: root.db_sync()
            text: "Drop / Pickup"

    Button:
        id: update_button
        text:"Update"
        disabled:False
        on_release: root.make_calendar()
        size_hint: 0.1,0.1
        pos_hint: {'x':0, 'y':0}
        font_size:'20sp'
    Label:
        id: update_data_label
        text:root.update_info()
        size_hint_y: None
        text_size: self.width, None
        height: self.texture_size[1]
        pos_hint: {'x':0.1, 'y':0}
        font_size:'20sp'
