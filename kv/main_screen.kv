<MainScreen>:
    id:screen_main
    name:"main"
    settings_button: settings_button
    reports_button: reports_button
    delivery_button: delivery_button
    dropoff_button: dropoff_button
    login_button: login_button
    item_search_button: item_search_button
    tags_status: tags_status
    receipt_status: receipt_status
    on_pre_enter: print('now')
    ActionBar:
        id: _action_main
        size_hint: 1,0.1
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            title: 'Jays Cleaners POS'
            ActionPrevious:
                title: 'Jays Cleaners POS'
                with_previous: False
                previous_image: ''
                on_release: root.manager.current = "main"
            ActionGroup:
                text: '               File               '
                mode: 'spinner'
                width: 900
                ActionButton:
                    text: 'Reconnect Printers'
                    on_release: root.reconnect_printers()
                ActionButton:
                    text: 'Quit'
                    on_release: app.get_running_app().stop()

    GridLayout:
        cols: 1
        rows: 2
        size_hint: 1,0.8
        pos_hint: {'top':0.9}
        GridLayout:
            cols: 3
            rows: 2
            size_hint_y: 3
            Button:
                id: settings_button
                on_release: root.settings_page()
                markup:True
                text: "[color=#AED6F1]Settings[/color]"
                disabled: True
                font_size:'20sp'

            Button:
                id: reports_button
                on_release: root.reports_page()
                text: "[color=#AED6F1]Reports[/color]"
                markup:True
                underline:True
                disabled: True
                font_size:'20sp'
            Button:
                id: dropoff_button
                disabled: True
                font_size:'20sp'
                on_release: app.root.current = "search"
                text: "Drop / Pickup"
            Button:
                id: delivery_button
                on_release: root.delivery_page()
                text: "[color=#AED6F1]Delivery[/color]"
                markup:True
                underline:True
                disabled: True
                font_size:'20sp'

            Button:
                id: login_button
                text: "Login"
                font_size:'20sp'
                on_release: root.login_show()

            Button:
                id: item_search_button
                disabled: True
                text: "Invoice Item Update"
                font_size: '20sp'
                on_press: app.root.current = "update"
                on_release: root.db_sync()
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.1

        RelativeLayout:
            size_hint: (None, 1)
            size_x: dp(25)
            StatusLabel:
                id: receipt_status
                size_hint:(1, 1)
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 1
                    Ellipse:
                        size: dp(25), dp(25)
                        pos: [self.center_x - dp(25)/2, self.center_y - dp(25)/2]
                        angle_start: 0
                        angle_end: 360

        Label:
            text: 'Receipt Printer Status'
            text_size:self.size
            halign: 'left'
            valign: 'middle'
        RelativeLayout:
            size_hint: (None, 1)
            size_x: dp(25)
            StatusLabel:
                id: tags_status
                size_hint:(1, 1)
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 1
                    Ellipse:
                        size: dp(25), dp(25)
                        pos: [self.center_x - dp(25)/2, self.center_y - dp(25)/2]
                        angle_start: 0
                        angle_end: 360

        Label:
            text: 'Tag Printer Status'
            text_size:self.size
            halign: 'left'
            valign: 'middle'