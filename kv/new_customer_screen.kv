<NewCustomerScreen>:
    id: screen_new_customer
    name: "new_customer"

    TabbedPanel:
        id: new_customer_panel
        do_default_tab: False
        TabbedPanelItem:
            id: tab_new_customer
            text: 'General'
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 1,0.9
                    GridLayout:
                        size_hint: 0.5,1
                        cols:2
                        padding: [25,25,25,25]
                        row_default_height:'50sp'
                        Label:
                            text: "Phone"
                            text_size: self.size
                            halign: 'right'
                            valign: 'middle'
                            font_size:'20sp'
                            size_hint_x: None
                            width: '175sp'
                            padding_x: '20sp'
                        TextInput:
                            id: phone
                            size_hint_y: None
                            hint_text: "Phone"
                            height: '30sp'
                            multiline: False
                            font_size:'20sp'
                            padding: [5,5,5,5]
                            size_hint_y: None
                            text: ''
                        Label:
                            text: "Last Name"
                            text_size: self.size
                            padding_x: '20sp'
                            font_size:'20sp'
                            halign: 'right'
                            valign: 'middle'
                            size_hint_x: None
                            width: '175sp'
                        TextInput:
                            id: last_name
                            size_hint_y: None
                            hint_text: "Last Name"
                            font_size:'20sp'
                            height: '30sp'
                            multiline: False
                            padding: [5,5,5,5]
                            size_hint_y: None
                            text: ''
                        Label:
                            text: "First Name"
                            text_size: self.size
                            padding_x: '20sp'
                            font_size:'20sp'
                            halign: 'right'
                            valign: 'middle'
                            size_hint_x: None
                            width: '175sp'
                        TextInput:
                            id: first_name
                            size_hint_y: None
                            hint_text: "First Name"
                            font_size:'20sp'
                            height: '30sp'
                            multiline: False
                            padding: [5,5,5,5]
                            size_hint_y: None
                            text: ''
                        Label:
                            text: "Email"
                            text_size: self.size
                            halign: 'right'
                            valign: 'middle'
                            font_size:'20sp'
                            size_hint_x: None
                            width: '175sp'
                            padding_x: '20sp'
                        TextInput:
                            id: email
                            size_hint_y: None
                            hint_text: "Email"
                            height: '30sp'
                            multiline: False
                            font_size:'20sp'
                            padding: [5,5,5,5]
                            size_hint_y: None
                            text: ''
                        Label:
                            text: "Important Memo"
                            text_size: self.size
                            padding_x: '20sp'
                            font_size:'20sp'
                            halign: 'right'
                            valign: 'middle'
                            size_hint_x: None
                            width: '175sp'
                        TextInput:
                            id: important_memo
                            size_hint_y: None
                            hint_text: "important memo"
                            font_size:'15sp'
                            height: '100sp'
                            size_hint_y: None
                            text: ''
                        Label:
                            text: "Invoice Memo"
                            text_size: self.size
                            halign: 'right'
                            valign: 'middle'
                            font_size:'20sp'
                            size_hint_x: None
                            width: '175sp'
                            padding_x: '20sp'
                        TextInput:
                            id: invoice_memo
                            size_hint_y: None
                            hint_text: "Invoice Memo"
                            height: '100sp'
                            font_size:'15sp'
                            size_hint_y: None
                            text: ''

                    GridLayout:
                        size_hint: 0.5,1
                        cols:2
                        padding: [25,25,25,25]
                        Label:
                            text: "Shirts Finish"
                            text_size: self.size
                            halign: 'right'
                            valign: 'middle'
                            font_size:'20sp'
                            size_hint_y: None
                            size_hint_x: None
                            width: '175sp'
                            padding_x: '20sp'
                        GridLayout:
                            cols:2
                            rows:4
                            row_force_default: True
                            row_default_height: 70
                            padding: [25,25,25,25]
                            size_hint_y: None
                            height: '80sp'
                            canvas.before:
                                Color:
                                    rgba: .75, .75, .75, .75
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                            CheckBox:
                                size_hint_y: None
                                size_hint_x: None
                                width:'10sp'
                                height: '48dp'
                                group: 'shirts_finish'
                                active: True
                            Label:
                                text: "Hanger"
                                text_size: self.size
                                halign: 'left'
                                valign: 'middle'
                                font_size:'20sp'
                                padding_x: '20sp'
                            CheckBox:
                                size_hint_y: None
                                size_hint_x: None
                                width:'10sp'
                                height: '48dp'
                                group: 'shirts_finish'
                            Label:
                                text: "Box / Folded"
                                text_size: self.size
                                halign: 'left'
                                valign: 'middle'
                                font_size:'20sp'
                                padding_x: '20sp'

                        Label:
                            text: "Shirts Preference"
                            text_size: self.size
                            halign: 'right'
                            valign: 'middle'
                            font_size:'20sp'
                            size_hint_y: None
                            size_hint_x: None
                            width: '175sp'
                            padding_x: '20sp'
                        GridLayout:
                            cols:2
                            rows:4
                            row_force_default: True
                            row_default_height: 70
                            padding: [25,25,25,25]
                            size_hint_y: None
                            height: '170sp'
                            canvas.before:
                                Color:
                                    rgba: .75, .75, .75, .75
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                            CheckBox:
                                size_hint_y: None
                                size_hint_x: None
                                width:'10sp'
                                height: '48dp'
                                group: 'shirts_preference'
                                active: True
                            Label:
                                text: "None"
                                text_size: self.size
                                halign: 'left'
                                valign: 'middle'
                                font_size:'20sp'
                                padding_x: '20sp'
                            CheckBox:
                                size_hint_y: None
                                size_hint_x: None
                                width:'10sp'
                                height: '48dp'
                                group: 'shirts_preference'
                            Label:
                                text: "Light"
                                text_size: self.size
                                halign: 'left'
                                valign: 'middle'
                                font_size:'20sp'

                                padding_x: '20sp'
                            CheckBox:
                                size_hint_y: None
                                size_hint_x: None
                                width:'10sp'
                                height: '48dp'
                                group: 'shirts_preference'
                            Label:
                                text: "Medium"
                                text_size: self.size
                                halign: 'left'
                                valign: 'middle'
                                font_size:'20sp'
                                padding_x: '20sp'
                            CheckBox:
                                size_hint_y: None
                                size_hint_x: None
                                width:'10sp'
                                height: '48dp'
                                group: 'shirts_preference'
                            Label:
                                text: "Heavy"
                                text_size: self.size
                                halign: 'left'
                                valign: 'middle'
                                font_size:'20sp'
                                padding_x: '20sp'
                BoxLayout:
                    size_hint: 1,0.1
                    Button:
                        id: cancel
                        on_release: app.root.current = "search"
                        font_size:'20sp'
                        text: "Cancel"
                        disabled: False
                    Button:
                        id: save
                        on_release: root.save_new_customer()
                        text: "Save"
                        font_size:'20sp'
                        disabled: False

        TabbedPanelItem:
            id: tab_account_customer
            text: 'Account'
            BoxLayout:
                orientation: 'horizontal'
                GridLayout:
                    cols:2

        TabbedPanelItem:
            id: tab_delivery_customer
            text: 'Delivery'
            BoxLayout:
                orientation: 'horizontal'
                GridLayout:
                    cols:2