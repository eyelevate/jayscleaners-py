<AdjustSumLayout@BoxLayout>
    id: adjust_summary_layout
    orientation: 'vertical'
    size_hint: 0.5, 1
    Label:
        text: '[b]Adjust Summary[/b]'
        markup: True
        size_hint: 1, None
        height: sp(25)
    GridLayout:
        rows:1
        cols:4
        height: self.minimum_height
        row_force_default: True
        row_default_height: sp(25)
        size_hint: 1, None
        Label:
            text: '[color=000000][b]Type[/b][/color]'
            size_hint_x: 0.1
            markup: True
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            font_size: sp(15)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            text: '[color=000000][b]QTY[/b][/color]'
            size_hint_x: 0.1
            markup:True
            text_size:self.size
            halign: 'center'
            valign: 'middle'
            font_size: sp(15)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            text: '[color=000000][b]ITEM[/b][/color]'
            size_hint_x: 0.5
            markup:True
            text_size:self.size
            halign: 'center'
            valign: 'middle'
            font_size: sp(15)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            text: '[color=000000][b]SUBTOTAL[/b][/color]'
            size_hint_x: 0.3
            markup:True
            text_size:self.size
            halign: 'center'
            valign: 'middle'
            font_size: sp(15)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 0.1
        AdjustSummaryTableRV:
            id: adjust_summary_table_rv