<ItemDetailsScreen>:
    id: screen_item_details
    name:"item_details"
    item_image: item_image
    items_table: items_table
    items_detail_history_table: items_detail_history_table
    img_button: img_button
    item_preview_layout: item_preview_layout
    inventory_name_label: inventory_name_label
    inventory_item_name: inventory_item_name
    on_enter: root.get_details()

    BoxLayout:
        orientation: 'horizontal'
        pos_hint: {'top':1}
        size_hint: 1,0.9
        ScrollView:
            size_hint_x: 0.5
            pos_hint:{'top':1}
            GridLayout:
                pos_hint:{'top':1}
                id: items_table
                size_hint_y:None
                height: self.minimum_height
                cols:4
                row_force_default: True
                row_default_height:dp(40)
        BoxLayout:
            orientation: 'vertical'
            pos_hint:{'top':1}
            size_hint: 0.5,1
            BoxLayout:
                orientation: 'horizontal'
                size_hint_x: 1
                size_hint_y:0.4
                Button:
                    id: img_button
                    font_size:sp(15)
                    on_release: root.image_full_view()
                    text: ""
                    disabled: False
                    Image:
                        id: item_image
                        source: 'src/imgs/dc.jpg'
                        size: dp(150),dp(150)
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        allow_stretch: True
                GridLayout:
                    id: item_preview_layout
                    cols:2
                    row_force_default: True
                    row_default_height:dp(40)
                    Label:
                        size_hint_y: None
                        markup: True
                        text_size:self.size
                        halign:'center'
                        valign:'middle'
                        text: "[color=000000][b]Group[/b][/color]"
                        font_size:sp(15)
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        size_hint_y: None
                        markup: True
                        text_size:self.size
                        halign:'center'
                        valign:'middle'
                        text: "[color=000000][b]Name[/b][/color]"
                        font_size:sp(15)
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        id: inventory_name_label
                        size_hint_y: None
                        text_size:self.size
                        halign:'center'
                        valign:'middle'
                        markup: True
                        text: ""
                        font_size:sp(15)
                    Label:
                        id: inventory_item_name
                        size_hint_y: None
                        markup: True
                        text_size:self.size
                        halign:'center'
                        valign:'middle'
                        text: ""
                        font_size:sp(15)

            ScrollView:
                pos_hint:{'top':1}
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                GridLayout:
                    pos_hint:{'top':1}
                    id: items_detail_history_table
                    size_hint_y:None
                    height: self.minimum_height
                    cols:3
                    row_force_default: True,
                    row_default_height:dp(40)
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        size_hint_y: None
                        markup: True
                        text_size:self.size
                        halign:'center'
                        valign:'middle'
                        text: "[color=000000][b]ID[/b][/color]"
                        font_size:sp(15)
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        size_hint_y: None
                        markup: True
                        text_size:self.size
                        halign:'center'
                        valign:'middle'
                        text: "[color=000000][b]Scanned[/b][/color]"
                        font_size:sp(15)
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        size_hint_y: None
                        markup: True
                        text_size:self.size
                        halign:'center'
                        valign:'middle'
                        text: "[color=000000][b]Location[/b][/color]"
                        font_size:sp(15)
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size


    BoxLayout:
        size_hint: 1,0.1
        Button:
            id: cancel
            on_release: app.root.current = "history"
            font_size:sp(20)
            text: "Cancel"
            disabled: False
