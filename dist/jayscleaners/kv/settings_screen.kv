<SettingsScreen>:
    name:"settings"
    ActionBar:
        id: _action_settings
        size_hint: 1,0.1
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Settings'
                with_previous: False
                previous_image: ''
                on_release: root.manager.current = "main"
                pos_hint: {'left':0}
            ActionGroup:
                text: '          File          '
                mode: 'spinner'
                width: 500
                ActionButton:
                    text: 'Quit'
                    on_release: app.get_running_app().stop()
    GridLayout:
        size_hint: 1,0.9
        pos_hint: {'top':0.9}
        cols: 4
        rows: 2
        Button:
            text:'Company'
            on_release: root.manager.current = 'company'
        Button:
            text:'Printer'
            on_release: root.manager.current = 'printer'
        Button:
            text:'[color=#AED6F1]Inventory[/color]'
            markup:True
            on_release: root.inventories_page()
        Button:
            text:'Tax'
            on_release: root.manager.current = 'taxes'
        Button:
            text:'Colors'
            on_release: root.manager.current = 'colors'
        Button:
            text:'Employees'
            on_release: root.manager.current = 'employees'
        Button:
            text:'Memo'
            on_release: root.manager.current = 'memos'
        Button:
            text:'[color=#AED6F1]Accounts[/color]'
            markup:True
            on_release: root.accounts_page()

