<CompanyScreen>:
    id: screen_company
    name: "company"
    company_name: company_name
    company_phone: company_phone
    company_email: company_email
    company_street: company_street
    company_city: company_city
    company_state: company_state
    company_zipcode: company_zipcode
    company_payment_gateway_id: company_payment_gateway_id
    company_payment_api_login: company_payment_api_login
    store_hours_table: store_hours_table

    on_pre_enter: root.reset()

    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            id: _action_settings
            size_hint: 1,0.1
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'Update Company Info'
                    with_previous: False
                    previous_image: ''
                    on_release: root.manager.current = "settings"
                    pos_hint: {'left':0}
                ActionGroup:
                    text: '          File          '
                    mode: 'spinner'
                    width: 500
                    ActionButton:
                        text: 'Quit'
                        on_release: app.get_running_app().stop()
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,0.8
            TabbedPanel:
                do_default_tab: False
                TabbedPanelItem:
                    text: 'Basic Info'
                    GridLayout:
                        cols: 2
                        rows: 7
                        row_force_default: True
                        row_default_height:'50sp'
                        spacing: '2sp'
                        Label:
                            markup: True
                            text: 'Name:'
                            text_size: self.size
                            halign: 'right'
                            valign: 'middle'
                            font_size:'20sp'
                            size_hint_x: None
                            width: '275sp'
                            padding_x: '20sp'
                        CenterVerticalTextInput:
                            id: company_name
                            text:""
                            padding_x: '10sp'
                        Label:
                            markup: True
                            text: 'Phone #:'
                            text_size: self.size
                            halign: 'right'
                            valign: 'middle'
                            font_size:'20sp'
                            size_hint_x: None
                            width: '275sp'
                            padding_x: '20sp'
                        CenterVerticalTextInput:
                            id: company_phone
                            text:""
                            padding_x: '10sp'
                        Label:
                            markup: True
                            text: 'Email:'
                            text_size: self.size
                            halign: 'right'
                            valign: 'middle'
                            font_size:'20sp'
                            size_hint_x: None
                            width: '275sp'
                            padding_x: '20sp'
                        CenterVerticalTextInput:
                            id: company_email
                            text:""
                            padding_x: '10sp'
                        Label:
                            markup: True
                            text: 'Street:'
                            text_size: self.size
                            halign: 'right'
                            valign: 'middle'
                            font_size:'20sp'
                            size_hint_x: None
                            width: '275sp'
                            padding_x: '20sp'
                        CenterVerticalTextInput:
                            id: company_street
                            text:""
                            padding_x: '10sp'
                        Label:
                            markup: True
                            text: 'City:'
                            text_size: self.size
                            halign: 'right'
                            valign: 'middle'
                            font_size:'20sp'
                            size_hint_x: None
                            width: '275sp'
                            padding_x: '20sp'
                        CenterVerticalTextInput:
                            id: company_city
                            text:""
                            padding_x: '10sp'
                        Label:
                            markup: True
                            text: 'State:'
                            text_size: self.size
                            halign: 'right'
                            valign: 'middle'
                            font_size:'20sp'
                            size_hint_x: None
                            width: '275sp'
                            padding_x: '20sp'
                        CenterVerticalTextInput:
                            id: company_state
                            text:""
                            padding_x: '10sp'
                        Label:
                            markup: True
                            text: 'Zipcode:'
                            text_size: self.size
                            halign: 'right'
                            valign: 'middle'
                            font_size:'20sp'
                            size_hint_x: None
                            width: '275sp'
                            padding_x: '20sp'
                        CenterVerticalTextInput:
                            id: company_zipcode
                            text:""
                            padding_x: '10sp'
                TabbedPanelItem:
                    text: 'Payment Info'
                    GridLayout:
                        cols: 2
                        rows: 7
                        row_force_default: True
                        row_default_height:'50sp'
                        spacing: '2sp'
                        Label:
                            markup: True
                            text: 'Gateway ID:'
                            text_size: self.size
                            halign: 'right'
                            valign: 'middle'
                            font_size:'20sp'
                            size_hint_x: None
                            width: '275sp'
                            padding_x: '20sp'
                        CenterVerticalTextInput:
                            id: company_payment_gateway_id
                            text:""
                            padding_x: '10sp'
                        Label:
                            markup: True
                            text: 'API Login:'
                            text_size: self.size
                            halign: 'right'
                            valign: 'middle'
                            font_size:'20sp'
                            size_hint_x: None
                            width: '275sp'
                            padding_x: '20sp'
                        CenterVerticalTextInput:
                            id: company_payment_api_login
                            text:""
                            padding_x: '10sp'
                TabbedPanelItem:
                    text: 'Store Hours'
                    size_hint: (1,1)
                    on_release: root.update_store_hours_table()
                    GridLayout:
                        id: store_hours_table
                        rows: 8
                        cols: 12
                        size_hint: (1,1)


        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,0.1
            Button:
                markup: True
                text: 'Cancel'
                on_release: app.root.current = "settings"
            Button:
                markup: True
                text: 'Edit Company'
                on_release: root.update()