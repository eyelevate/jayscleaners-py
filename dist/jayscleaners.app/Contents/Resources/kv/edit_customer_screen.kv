<EditCustomerScreen>:
    id: screen_edit_customer
    name: "edit_customer"

    last_name: last_name
    first_name: first_name
    phone: phone
    email: email
    important_memo: important_memo
    invoice_memo: invoice_memo
    is_delivery: is_delivery
    is_account: is_account
    street: street
    suite: suite
    city: city
    zipcode: zipcode
    concierge_name: concierge_name
    concierge_number: concierge_number
    special_instructions: special_instructions
    marks_table: marks_table
    mark_text: mark_text
    shirt_finish_spinner: shirt_finish_spinner
    shirt_preference_spinner: shirt_preference_spinner
    delete_customer_spinner: delete_customer_spinner
    new_customer_panel: new_customer_panel
    tab_new_customer: tab_new_customer

    on_enter:root.load()

    TabbedPanel:
        id: new_customer_panel
        do_default_tab: False
        TabbedPanelItem:
            id: tab_new_customer
            text: 'General'
            BoxLayout:
                orientation: 'vertical'
                RelativeLayout:
                    size_hint: 1,0.9
                    ScrollView:
                        size_hint:(1,1)
                        GridLayout:
                            id: main_grid
                            size_hint_y:None
                            height: self.minimum_height
                            cols: 1
                            row_force_default: True
                            row_default_height:sp(50)
                            BottomLeftFormLabel:
                                text: "Phone"
                            CenterVerticalTextInput:
                                id: phone
                                hint_text: "XXXXXXXXXX"
                                font_size:'20sp'
                                multiline: False
                                padding: [5,5,5,5]
                                text: ''

                            BottomLeftFormLabel:
                                text: "Last Name"

                            CenterVerticalTextInput:
                                id: last_name
                                hint_text: "Last Name"
                                font_size:'20sp'
                                multiline: False
                                padding: [5,5,5,5]
                                text: ''
                            BottomLeftFormLabel:
                                text: "First Name"
                            CenterVerticalTextInput:
                                id: first_name
                                hint_text: "First Name"
                                font_size:'20sp'
                                multiline: False
                                padding: [5,5,5,5]
                                text: ''
                            BottomLeftFormLabel:
                                text: "Email"
                            CenterVerticalTextInput:
                                id: email
                                hint_text: "Email"
                                font_size:'20sp'
                                multiline: False
                                padding: [5,5,5,5]
                                text: ''
                            BottomLeftFormLabel:
                                text: "Important Memo"
                            CenterVerticalTextInput:
                                id: important_memo
                                hint_text: "Important Memo"
                                font_size:'20sp'
                                multiline: False
                                padding: [5,5,5,5]
                                text: ''
                            BottomLeftFormLabel:
                                markup: True
                                text: "Invoice Memo"
                            CenterVerticalTextInput:
                                id: invoice_memo
                                hint_text: "Invoice Memo"
                                font_size:'20sp'
                                multiline: False
                                padding: [5,5,5,5]
                                text: ''
                            BottomLeftFormLabel:
                                text: "Shirts Finish"

                            Spinner:
                                id: shirt_finish_spinner
                                # default value shown
                                text:'Hanger'
                                # available values
                                values:["Hanger","Box"]
                                # just for positioning in our example
                                size_hint_x:1
                                size_hint_y:0.5
                                pos_hint:{'center_x': .5, 'center_y': .5}
                            BottomLeftFormLabel:
                                text: "Shirts Preference"

                            Spinner:
                                id: shirt_preference_spinner
                                # default value shown
                                text:'None'
                                # available values
                                values:["None","Light","Medium","Heavy"]
                                # just for positioning in our example
                                size_hint_x:1
                                size_hint_y:0.5
                                pos_hint:{'center_x': .5, 'center_y': .5}

                            BottomLeftFormLabel:
                                text: "[color=FF0000]Delete Customer?[/color]"
                            Spinner:
                                id: delete_customer_spinner
                                text: 'No'
                                #default value shown
                                values:["No","Yes"]
                                size_hint_x:1
                                size_hint_y:0.5
                                pos_hint:{'center_x':.5, 'center_y':.5}
                            BottomLeftFormLabel:
                                text: ""
                            BottomLeftFormLabel:
                                text: ""

                BoxLayout:
                    size_hint: 1,0.1
                    Button:
                        id: cancel
                        on_press: root.set_result_status()
                        on_release: app.root.current = "search"
                        font_size:'20sp'
                        text: "Cancel"
                        disabled: False
                    Button:
                        id: save
                        on_release: root.validate()
                        text: "Save"
                        font_size:'20sp'
                        disabled: False
        TabbedPanelItem:
            id: tab_delivery_customer
            text: 'Delivery'
            BoxLayout:
                orientation: 'vertical'
                RelativeLayout:
                    size_hint: 1,0.9
                    ScrollView:
                        size_hint:(1,1)
                        GridLayout:
                            size_hint_y:None
                            height: self.minimum_height
                            cols: 1
                            row_force_default: True
                            row_default_height:sp(50)

                            BottomLeftFormLabel:
                                text: "Delivery?"
                            Switch:
                                id: is_delivery
                                active: False
                                on_active: root.set_delivery()
                            BottomLeftFormLabel:
                                text: "Concierge"
                            CenterVerticalTextInput:
                                id: concierge_name
                                hint_text: "Concierge Name"
                                font_size:'20sp'
                                multiline: False
                                padding: [5,5,5,5]
                                disabled: True
                                text: ''
                            BottomLeftFormLabel:
                                text: "Concierge Number"
                            CenterVerticalTextInput:
                                id: concierge_number
                                hint_text: "Concierge Number"
                                font_size:'20sp'
                                multiline: False
                                padding: [5,5,5,5]
                                disabled: True
                                text: ''
                            BottomLeftFormLabel:
                                text: "Special Instructions"
                            CenterVerticalTextInput:
                                id: special_instructions
                                hint_text: "Special Instructions"
                                font_size:'20sp'
                                multiline: False
                                padding: [5,5,5,5]
                                disabled: True
                                text: ''
                            BottomLeftFormLabel:
                                text: ""
                            BottomLeftFormLabel:
                                text: ""
                BoxLayout:
                    size_hint: 1,0.1
                    Button:
                        id: cancel
                        on_press: root.set_result_status()
                        on_release: app.root.current = "search"
                        font_size:'20sp'
                        text: "Cancel"
                        disabled: False
                    Button:
                        id: save
                        on_release: root.validate()
                        text: "Save"
                        font_size:'20sp'
                        disabled: False
        TabbedPanelItem:
            id: tab_account_customer
            text: 'Account'
            BoxLayout:
                orientation: 'vertical'
                RelativeLayout:
                    size_hint: 1,0.9
                    ScrollView:
                        size_hint:(1,1)
                        GridLayout:
                            size_hint_y:None
                            height: self.minimum_height
                            cols: 1
                            row_force_default: True
                            row_default_height:sp(50)
                            BottomLeftFormLabel:
                                text: "Account?"
                            Switch:
                                id: is_account
                                active: False
                                on_active: root.set_account()
                            BottomLeftFormLabel:
                                text: "Street"
                            CenterVerticalTextInput:
                                id: street
                                hint_text: "Street"
                                font_size:'20sp'
                                multiline: False
                                padding: [5,5,5,5]
                                disabled: True
                                text: ''

                            BottomLeftFormLabel:
                                text: "Suite"
                            CenterVerticalTextInput:
                                id: suite
                                hint_text: "Suite"
                                font_size:'20sp'
                                multiline: False
                                padding: [5,5,5,5]
                                disabled: True
                                text: ''
                            BottomLeftFormLabel:
                                text: "City"
                            CenterVerticalTextInput:
                                id: city
                                hint_text: "City"
                                font_size:'20sp'
                                multiline: False
                                padding: [5,5,5,5]
                                disabled: True
                                text: ''
                            BottomLeftFormLabel:
                                text: "Zipcode"
                            CenterVerticalTextInput:
                                id: zipcode
                                hint_text: "Zipcode"
                                font_size:'20sp'
                                multiline: False
                                padding: [5,5,5,5]
                                disabled: True
                                text: ''
                BoxLayout:
                    size_hint: 1,0.1
                    Button:
                        id: cancel
                        on_release: app.root.current = "search"
                        font_size:'20sp'
                        text: "Cancel"
                        disabled: False
                    Button:
                        id: save
                        on_release: root.validate()
                        text: "Save"
                        font_size:'20sp'
                        disabled: False
        TabbedPanelItem:
            id: tab_marks
            text: 'Shirt Marks'
            BoxLayout:
                orientation: 'vertical'
                GridLayout:
                    size_hint: 1,.1
                    cols:3
                    rows:1
                    padding: [25,25,25,25]
                    Label:
                        text: "Shirt Marks"
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                        font_size:'20sp'
                        size_hint_x: None
                        width: '175sp'
                        padding_x: '20sp'
                    TextInput:
                        id: mark_text
                        size_hint_y: None
                        hint_text: "Mark"
                        height: '30sp'
                        multiline: False
                        font_size:'20sp'
                        padding: [5,5,5,5]
                        size_hint_y: None
                        text: ''
                    Button:
                        text: "Create Mark"
                        id: create_mark
                        on_release: root.create_mark()
                        font_size:'20sp'
                        text: "Create"
                        disabled: False
                GridLayout:
                    id: marks_table
                    size_hint: 1,0.8
                    cols:6
                    padding: [25,25,25,25]
                    canvas.before:
                        Color:
                            rgba: .75, .75, .75, .75
                        Rectangle:
                            pos: self.pos
                            size: self.size
                BoxLayout:
                    size_hint: 1,0.1
                    Button:
                        id: cancel
                        on_press: root.set_result_status()
                        on_release: app.root.current = "search"
                        font_size:'20sp'
                        text: "Cancel"
                        disabled: False
                    Button:
                        id: save
                        on_release: root.validate()
                        text: "Save"
                        font_size:'20sp'
                        disabled: False
