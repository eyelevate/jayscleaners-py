<PrinterScreen>:
    id: screen_printer
    name:"printer"
    printer_name: printer_name
    printer_model_number: printer_model_number
    printer_nick_name: printer_nick_name
    printer_vendor: printer_vendor
    printer_product: printer_product
    printer_type: printer_type
    printer_table: printer_table
    on_enter: root.reset()

    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            id: _action_settings
            size_hint: 1,0.1
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'Printer Setup'
                    with_previous: False
                    previous_image: ''
                    on_release: root.manager.current = "settings"
                    pos_hint: {'left':0}
                ActionGroup:
                    text: '          File          '
                    mode: 'spinner'
                    width: 500
                    ActionButton:
                        text: 'Quit'
                        on_release: app.get_running_app().stop()
        BoxLayout:
            size_hint: 1, 0.8
            orientation: 'horizontal'

            BoxLayout:
                size_hint: 0.7,1
                GridLayout:
                    cols: 2
                    rows: 7
                    row_force_default: True
                    row_default_height:'50sp'
                    spacing: '2sp'
                    Label:
                        markup: True
                        text: 'Printer Name:'
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                        font_size:'20sp'
                        size_hint_x: None
                        width: '175sp'
                        padding_x: '20sp'
                    CenterVerticalTextInput:
                        id: printer_name
                        text:""
                        padding_x: '10sp'
                    Label:
                        markup: True
                        text: 'Model #:'
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                        font_size:'20sp'
                        size_hint_x: None
                        width: '175sp'
                        padding_x: '20sp'
                    CenterVerticalTextInput:
                        id: printer_model_number
                        text:""
                        padding_x: '10sp'
                    Label:
                        markup: True
                        text: 'Nick Name:'
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                        font_size:'20sp'
                        size_hint_x: None
                        width: '175sp'
                        padding_x: '20sp'
                    CenterVerticalTextInput:
                        id: printer_nick_name
                        text:""
                        padding_x: '10sp'
                    Label:
                        markup: True
                        text: 'Vendor ID:'
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                        font_size:'20sp'
                        size_hint_x: None
                        width: '175sp'
                        padding_x: '20sp'
                    CenterVerticalTextInput:
                        id: printer_vendor
                        text:""
                        padding_x: '10sp'
                    Label:
                        markup: True
                        text: 'Product ID:'
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                        font_size:'20sp'
                        size_hint_x: None
                        width: '175sp'
                        padding_x: '20sp'
                    CenterVerticalTextInput:
                        id: printer_product
                        text:""
                        padding_x: '10sp'
                    Label:
                        markup: True
                        text: 'Type:'
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                        font_size:'20sp'
                        size_hint_x: None
                        width: '175sp'
                        padding_x: '20sp'
                    CenterVerticalTextInput:
                        id: printer_type
                        text:""
                        padding_x: '10sp'
            BoxLayout:
                orientation: 'vertical'
                padding: [10, 0, 0, 0]
                size_hint: 0.3,1
                ScrollView:
                    GridLayout:
                        id: printer_table
                        height: self.minimum_height
                        size_hint_y:None
                        cols: 3
                        row_force_default: True
                        row_default_height:'50sp'
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        Label:
                            markup: True
                            text: '[color=000000][b]#[/b][/color]'
                        Label:
                            markup: True
                            text: '[color=000000][b]Name[/b][/color]'
                        Label:
                            markup: True
                            text: '[color=000000][b]Type[/b][/color]'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,0.1
            Button:
                markup: True
                text: 'Cancel'
                on_press: root.reset()
                on_release: app.root.current = "settings"
            Button:
                markup: True
                text: 'Add Printer'
                on_release: root.validate()