<TaxesScreen>:
    id: screen_taxes
    name: "taxes"
    tax_rate_input: tax_rate_input
    on_pre_enter: root.reset()

    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            id: _action_settings
            size_hint: 1,0.1
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'Tax Update'
                    with_previous: False
                    previous_image: ''
                    on_release: root.manager.current = "settings"
                    pos_hint: {'left':0}
                ActionGroup:
                    text: '          File          '
                    mode: 'spinner'
                    width: 500
                    ActionButton:
                        text: 'Quit'
                        on_release: app.get_running_app().stop()
        BoxLayout:
            size_hint: 1,0.8
            orientation: 'vertical'
            GridLayout:
                id: taxes_table
                cols: 3
                rows: 1
                row_force_default: True
                row_default_height: '50sp'
                CenteredFormLabel:
                    text: 'Tax Rate'
                CenterVerticalTextInput:
                    id: tax_rate_input
                CenteredFormLabel:
                    text: '%'
                    halign: 'left'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,0.1
            Button:
                markup: True
                text: 'Cancel'
                on_press: root.reset()
                on_release: app.root.current = "settings"
            Button:
                markup: True
                text: 'Update'
                on_release: root.update()