<InventoryItemsScreen>:
    id: screen_inventory_items
    name: "inventory_items"
    items_panel: items_panel

    on_enter: root.loading()

    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            id: _action_settings
            size_hint: 1,0.1
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'Inventory Items Update'
                    with_previous: False
                    previous_image: ''
                    on_release: root.manager.current = "inventories"
                    pos_hint: {'left':0}
                ActionGroup:
                    text: '          File          '
                    mode: 'spinner'
                    width: 500
                    ActionButton:
                        text: 'Quit'
                        on_release: app.get_running_app().stop()
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,0.8
            TabbedPanel:
                id: items_panel
                do_default_tab: False

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,0.1
            Button:
                markup: True
                text: 'Cancel'
                on_release: app.root.current = "inventories"
            Button:
                markup: True
                text: 'Add Item'
                on_release: root.add_item_popup()
